{% extends 'base.html.twig' %}

{% block title %}Création d'une annonce{% endblock %}

{% form_theme form _self %}

{% block body %}

<div class="container">
    <h1>Créer une nouvelle annonce: </h1>

    {{ form_start(form) }}

    {{form_widget(form)}}

    <button class="submit btn btn-primary">Créer une annonce</button>

    {{ form_end(form) }}
</div>

{% endblock %}

{% block _ad_images_widget %}

    <p>Ici, vous pouvez ajouter vos propres images !</p>

    {{ form_widget(form) }}

    <div class="form-group">
        <button type="button" id="add-images" class="btn btn-primary">Ajouter une image</button>
    </div>

{% endblock %}

{% block _ad_images_entry_row %}
    {{ form_widget(form) }}
{% endblock %}

{% block _ad_images_entry_widget %}
<div class="form-group">
    <div class="row">
        <div class="col">
            {{form_widget(form.url)}}
        </div>
        <div class="col">
            {{form_widget(form.caption)}}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}

<script>

        $('#add-images').click(function(){
        //Je récupère le numéro des futurs champs que je vais créer
        const index = $('#ad_images div.form-group').length;

        // Je récupère le prototype des entrées
        const tmpl = $('#ad_images').data('prototype').replace(/__name__/g, index);

        //J'injecte ce code au sein de la div
        
        $('#ad_images').append(tmpl);


    });

    
</script>

{% endblock %}